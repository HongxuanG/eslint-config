{
  "name": "@aaronghx/eslint-config-basic",
  "version": "0.1.4",
  "description": "eslint-config basic模块",
  "keywords": [
    "eslint-config-basic"
  ],
  "license": "MIT",
  "author": "AaronGuo <1359774872@qq.com> (https://github.com/HongxuanG)",
  "files": [
    "index.js"
  ],
  "main": "index.js",
  "scripts": {
    "lint": "eslint . --config=index.js",
    "lint:fix": "eslint . --fix --config=index.js",
    "publish:major": "npm version major && pnpm publish --no-git-checks",
    "publish:minor": "npm version minor && pnpm publish --no-git-checks",
    "publish:patch": "npm version patch && pnpm publish --no-git-checks"
  },
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "eslint": ">=7.4.0"
  },
  "dependencies": {
    "eslint-config-standard": "17.0.0-1",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-html": "^6.2.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsonc": "^2.2.1",
    "eslint-plugin-markdown": "^2.2.1",
    "eslint-plugin-n": "^14.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-unicorn": "^41.0.0",
    "eslint-plugin-yml": "^0.14.0",
    "jsonc-eslint-parser": "^2.1.0",
    "yaml-eslint-parser": "^0.5.0"
  },
  "devDependencies": {
    "eslint": "^8.10.0"
  }
}
